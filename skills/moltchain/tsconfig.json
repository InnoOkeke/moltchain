{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./scripts",
        "declaration": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}